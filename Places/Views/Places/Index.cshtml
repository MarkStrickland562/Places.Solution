@using Places.Models;

<h1>Traveler Journal</h1>
<ul>

@if (Model.Count == 0)
{
  <p>You have no places in your journal!</p>
}
@if(Model.Count != 0)
{
  @foreach (Place item in Model)
  {
    <li>
      <a href='/places/@item.GetId()'>@item.GetCityName()</a>
    </li>
  }
}

</ul>
<a href="/places/new">Add a new place.</a>
