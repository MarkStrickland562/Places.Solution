@using Places.Models;

<h1>Traveler Journal</h1>
<ul>

@if (Model.Count == 0)
{
  <p>You have no places in your journal!</p>
}
@if(Model.Count != 0)
{
  @foreach (Place item in Model)
  {
    <li> You have traveled to @item.GetCityName() for @item.GetDuration() with @item.GetCompanion(). <a href="@item.GetPhoto()">Here's the photo album.</a> Your notes : <br> @item.GetJournalEntry() </li>
  }
}

</ul>
<a href="/places/new">Add a new place.</a>
